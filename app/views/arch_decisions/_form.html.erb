<%= error_messages_for 'arch_decision' %>

<div class="box">
<!--[form:arch_decision]-->
<p><%= f.text_field :summary, :size => 100, :required => true, :tabindex => autotab %><br /><em><%= l(:text_caracters_maximum, ArchDecision::SUMMARY_MAX_SIZE) %></em></p>

<p><%= f.text_area :problem_description, :rows => 5, :class => 'wiki-edit', :tabindex => autotab %></p>

<p><%= f.text_area :resolution, :rows => 5, :class => 'wiki-edit', :tabindex => autotab %></p>

<p><%= f.select :status_id, (@arch_decision_statuses.collect {|s| [s.name, s.id]}), { :required => true }, { :tabindex => autotab } %></p>

<p><%= f.select :assigned_to_id, (@arch_decision.assignable_users.collect {|u| [u.name, u.id]}), { :include_blank => true} , { :tabindex => autotab }  %></p>

<%= wikitoolbar_for 'arch_decision_problem_description' %>
<%= wikitoolbar_for 'arch_decision_resolution' %>

<p><label><%= l(:label_issue_watchers) %></label>
<% @project.users.sort.each do |user| -%>
<label class="floating"><%= check_box_tag 'arch_decision[watcher_user_ids][]', user.id, @arch_decision.watcher_user_ids.include?(user.id) %> <%=h user %></label>
<% end -%>
</p>

</div>
<!--[eoform:arch_decision]-->
